@model List<WriteCongress.Core.Issue>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
}

<ul class="unstyled">
     @foreach (var issue in Model)
                        {
         <li>
                            <div class="third_wide"><strong>@issue.Name</strong>
                           <p>@issue.Description</p>
                            <a class="button buttonleft button_gray" href="/Issues/@issue.Slug/">Send Letter</a>						
						</div>
             </li>
                        }    
  
</ul>
