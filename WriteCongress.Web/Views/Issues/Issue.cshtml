@using WriteCongress.Core
@model WriteCongress.Core.Issue

@{
    ViewBag.Title = "Send a real letter to congress about "+@Model.Name;
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
    
}
<div class="container-fluid">
        <div class="row-fluid">
            <h1>@Model.Name</h1>
            <div>
                <p>
                    @Model.Description
                </p>
            </div>
            <div>
                 @{
                var issueLetters = (List<Letter>) ViewBag.Letters;
                var lettersYay = issueLetters.Where(i => i.Against == true).ToList();
                var lettersNay = issueLetters.Where(i => i.Against == false).ToList();
            }
            
                <ul>
                    @foreach (var letter in issueLetters)
                    {
                         <li>
                        <div class="media">
                          <a class="pull-left" href="#">
                              @if(letter.Against){
                            <img class="media-object" src="/Images/thumbs_down.med.png" />
                              }else{
                            <img class="media-object" src="/Images/thumbs_up.med.png" />
                              
                              }
                          </a>
                          <div class="media-body">
                            <h4 class="media-heading">@letter.Name</h4>
                            <p>@letter.Description</p>
                          </div>
                        </div>
                    </li>
                    }
                   

                </ul>
            @*<h2>For</h2>
            <ul>
                @foreach (var letter in lettersYay) {
                    <li><a href="/Issues/@Model.Slug/@letter.Slug">@letter.Name &ndash; @letter.Description</a></li>
                }
            </ul>
            
            <h2>Against</h2>
            <ul>
                @foreach (var letter in lettersNay) {
                    <li><a href="/Issues/@Model.Slug/@letter.Slug">@letter.Name &ndash; @letter.Description</a></li>
                    }
            </ul>*@

            </div>
        </div>

</div>