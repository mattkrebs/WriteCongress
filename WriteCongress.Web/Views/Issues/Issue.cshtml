@using WriteCongress.Core
@model WriteCongress.Core.Issue

@{
    ViewBag.Title = "Send a real letter to congress about " + @Model.Name;
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
    
}
<div class="container-fluid">
    <div class="row-fluid">
        <div class="page-header">
            <h1>@Model.Name</h1>
        </div>
        <div class="row-fluid">
            <p>@Model.Description</p>
        </div>
        <div class="row-fluid letter-block">
            @{var issueLetters = (List<Letter>)ViewBag.Letters;}
            @foreach (var letter in issueLetters)
            {
                <div class="span4">
                    <a href="/Issues/@Model.Slug/@letter.Slug">
                        <h4>@letter.Name</h4>
                       @* <p>
                            @if (letter.Against)
                            {<i class="icon-thumbs-down"></i>}
                            else
                            {<i class="icon-thumbs-up"></i>}
                        </p>*@
                        <p>@letter.Description</p>
                    </a>
                </div>
            }
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="alert">Don't see a letter here that represents your viewpoint? Send us your letter and we'll help you publish it here: <a href="mailto:support@writecongress.us">support@writecongress.us</a></div>
            </div>
        </div>
    </div>
</div>
