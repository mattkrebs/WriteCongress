@using WriteCongress.Core
@model WriteCongress.Core.Issue

@{
    ViewBag.Title = "Send a real letter to congress about " + @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!-- Title, Breadcrumb Start-->
<div class="breadcrumb-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                <h2 class="title">@Model.Name</h2>
            </div>
            <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                <div class="breadcrumbs pull-right">
                    <ul>
                        <li></li>
                        <li><a href="/issues">Issues</a></li>
                        <li>@Model.Name</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
    <div class="services-big">
        <div class="container">
            <div class="row">
                <!-- Recent works start-->
                <div class="portfolio">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <h3 class="title">Letters</h3>
                    </div>
                    @{var issueLetters = (List<Letter>)ViewBag.Letters;}
                    @foreach (var letter in issueLetters)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12 item">
                            <div class="portfolio-item">
                                <div class="portfolio-item-title">
                                    <a href="/Issues/@Model.Slug/@letter.Slug">@letter.Name</a>
                                    <p>
                                        @letter.Description
                                    </p>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    }
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>



