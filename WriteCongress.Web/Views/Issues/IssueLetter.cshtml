<!-- Title, Breadcrumb Start-->
<div class="breadcrumb-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                <h2 class="title">Send A Letter</h2>
            </div>
            <div class="col-lg-6 col-md-6 col-xs-12 col-sm-6">
                <div class="breadcrumbs pull-right">
                    <ul>
                        <li></li>
                        <li><a href="/issues">Issues</a></li>
                        <li><a href="/issues/@Model.Issue.Slug">@Model.Issue.Name</a></li>
                        <li>@Model.Letter.Name</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

