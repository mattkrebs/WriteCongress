<div class="content">
    <div class="container">
        <div class="row">
            <div class="posts-block col-lg-8 col-md-8 col-sm-8 col-xs-12">
                <div id="letter" class="letter">
                    <div id="letterHeader" class="letter-header well">
                        <h1>@Model.Letter.Name</h1>
                        <h4 class="letter-description">@Model.Letter.Description</h4>
                    </div>
                    <div class="well">
                        <h5>@DateTime.Now.ToString("MMMM d, yyyy")</h5>
                        <div><span data-bind="{autoswaptext:User().FirstName,placeholder:'[Your Name]'}"></span>&nbsp;<span data-bind="{text:User().LastName}"></span></div>
                        <div>
                            <div data-bind="{autoswaptext:User().AddressOne,placeholder:'[Your Address]'}"></div>
                            <div data-bind="{text:User().AddressTwo}"></div>
                            <span data-bind="{text:User().City}"></span> <span data-bind="{text:User().State}"></span> <span data-bind="{autoswaptext:User().Zip,placeholder:'[Your City, State & Zip]'}"></span>
                            <br />
                        </div>
                        <div class="letter-recipients">
                            <p>
                                The Honorable
                                <span id="addressse" class="label dark" title="We'll replace on each letter this with the name of the Senator/Rep this letter is sent to." data-toggle="tooltip">[NAME OF REP OR SENATOR] <i class="icon-info-sign"></i></span>
                            </p>
                            <div class="letter-subject">RE: @Model.Issue.Name</div>
                        </div>
                        <div class="letter-body">
                            @Html.Raw(Model.Letter.Body)
                        </div>
                        <div class="letter-signature">
                            <h4>Sincerely</h4>
                            <span id="letter-signature">
                                <span data-bind="{autoswaptext:User().FirstName,placeholder:'[Your Signature]'}"></span><span data-bind="{text:User().LastName}"></span>
                            </span>
                            <h5 data-bind="{text:User().Email}"></h5>
                            <h5 data-bind="{text:User().PhoneNumber}"></h5>
                        </div>
                    </div>
                </div>

            </div>
            <!-- Left Section End -->
            <div class="sidebar col-lg-4 col-md-4 col-sm-4 col-xs-12">
                <div id="senderInfo" class="well letterinfo">
                    <h2><i class="icon-envelope-alt"></i> Mail this letter</h2>


                    <p>Please enter your info below</p>
                    <h3 class="title">
                        Your Info
                    </h3>


                    <div class="row">
                        <div class="col-md-8">
                            <div class="search-form">
                                <div class="input-group">
                                    <input type="text" maxlength="5" id="zipcode" data-bind="{value:User().Zip}" placeholder="Zip Code" onfocus="if(this.value=='Zip Code')this.value='';" onblur="if(this.value=='')this.value='Zip Code';" class="search-input form-control">
                                    <span class="input-group-btn">
                                        <button type="submit" class="subscribe-btn btn"><i class="icon-search"></i></button>
                                    </span>

                                </div>

                                <!-- /input-group -->
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <p>Enter your zip code so we can start gathering your senators and representative.</p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 offset-vpadding-sm">
                            <input class="form-control" type="text" id="firstname" maxlength="11" placeholder="First Name" data-bind="{value:User().FirstName, valueUpdate: 'afterkeydown',enable:User().ValidZip}" />
                        </div>
                        <div class="col-md-6 offset-vpadding-sm">
                            <input class="form-control" type="text" id="lastname" maxlength="20" placeholder="Last Name" data-bind="{value:User().LastName, valueUpdate: 'afterkeydown',enable:User().ValidZip}" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 offset-vpadding-sm">
                            <input class="form-control" type="text" id="address1" maxlength="60" placeholder="Address 1" data-bind="{value:User().AddressOne,enable:User().ValidZip}" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 offset-vpadding-sm">
                            <input class="form-control" type="text" id="address2" maxlength="60" placeholder="Address 2" data-bind="{value:User().AddressTwo,enable:User().ValidZip}" />
                        </div>
                    </div>



                    <div class="row">
                        <div class="col-md-8 offset-nor offset-vpadding-sm">
                            <input class="form-control" type="text" id="city" maxlength="20" placeholder="City" data-bind="{value:User().City,enable:User().ValidZip}" />
                        </div>

                        <div class="col-md-4 offset-sm offset-vpadding-sm">
