@{
    ViewBag.Title = "Sending snail mail to congress requires a password, reset yours here.";
}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <h2>Password Reset</h2>
            <h5>Invalid/Expired Token</h5>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span7">
            <div class="well">
                The password reset you're using is invalid. This can be due to one of the following:<ul>
                    <li>Request has already been used</li>
                    <li>Requested from a different computer/IP</li>
                    <li>Reset request is more than 24 hours old</li>
                    <li>The email address associated with the request doesn't match the confirmed email address used when resetting</li>
                </ul>
            </div>
        </div>
    </div>
</div>